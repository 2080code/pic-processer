{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2015",
    "lib": ["ES2015"],
    "module": "esnext",
    "types": ["node"],
    // "skipLibCheck": true,
    "useDefineForClassFields": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

  },
  "include": ["vite.config.ts"]
}
